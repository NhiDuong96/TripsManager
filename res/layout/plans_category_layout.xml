<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="TRAVEL"
        android:background="@drawable/border"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_airplan_layer"/>
    <ListView
        android:id="@+id/list_travel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="ACTIVITY"
        android:background="@drawable/border"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_activity_layer"/>
    <ListView
        android:id="@+id/list_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="OTHER"
        android:background="@drawable/border"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon_other_layer"/>
    <ListView
        android:id="@+id/list_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>